<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zhu.ticketgrabbing.dao.TrainCityDao">

    <resultMap id="BaseResultMap" type="com.zhu.ticketgrabbing.entity.TrainCity">
        <!--@Table train_city-->
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="title" column="title" jdbcType="VARCHAR"/>
        <result property="code" column="code" jdbcType="VARCHAR"/>
        <result property="simple" column="simple" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="BaseResultMap">
        select
          id, title, code, simple
        from train_city
        where id = #{id}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="BaseResultMap">
        select
          id, title, code, simple
        from ticket.train_city
    </select>
    <!--统计总行数-->
    <select id="count" resultType="java.lang.Long">
        select count(1)
        from train_city
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="title != null and title != ''">
                and title = #{title}
            </if>
            <if test="code != null and code != ''">
                and code = #{code}
            </if>
            <if test="simple != null and simple != ''">
                and simple = #{simple}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into train_city(title, code, simple)
        values (#{title}, #{code}, #{simple})
    </insert>

    <insert id="insertBatch" keyProperty="id" useGeneratedKeys="true">
        insert into train_city(title, code, simple)
        values
        <foreach collection="entities" item="entity" separator=",">
        (#{entity.title}, #{entity.code}, #{entity.simple})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="id" useGeneratedKeys="true">
        insert into train_city(title, code, simple)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.title}, #{entity.code}, #{entity.simple})
        </foreach>
        on duplicate key update
        title = values(title),
        code = values(code),
        simple = values(simple)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update train_city
        <set>
            <if test="title != null and title != ''">
                title = #{title},
            </if>
            <if test="code != null and code != ''">
                code = #{code},
            </if>
            <if test="simple != null and simple != ''">
                simple = #{simple},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from train_city where id = #{id}
    </delete>

</mapper>

